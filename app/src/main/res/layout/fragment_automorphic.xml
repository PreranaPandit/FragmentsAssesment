<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="425dp"
    android:orientation="vertical"
    android:background="@drawable/auto"
    tools:context=".fragments.AutomorphicFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Automorphic Number"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/etAutomorphicNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Automorphic Number"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp"
        android:inputType="number"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:text="Check Automorphic"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:background="#172779"
        />


    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:text="Result can be seen here"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"

        />
</LinearLayout>