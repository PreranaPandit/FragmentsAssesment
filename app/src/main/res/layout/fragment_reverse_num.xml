<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="425dp"
    android:orientation="vertical"
    android:background="@drawable/reverse"
    tools:context=".fragments.ReverseNumFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REVERSE NUMBER"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:inputType="number"
        android:id="@+id/etReverseNum"
        android:textSize="25dp"
        android:hint="Enter any number"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnReverse"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="REVERSE"
        android:textSize="25dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:background="#5165DA"
        android:textColor="#fff"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/tvReverseOutput"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:background="#fff"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Reverse Number Output"
        android:textAlignment="center"
        android:textStyle="bold"
        />

</LinearLayout>