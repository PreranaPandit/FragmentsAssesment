<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="425dp"
    android:background="@drawable/green"
    android:orientation="vertical"
    tools:context=".fragments.ReverseStringFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REVERSE STRING"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:inputType="text"
        android:id="@+id/etReverseString"
        android:textSize="20dp"
        android:hint="Enter string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnReverse"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="REVERSE"
        android:background="#285C2A"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/tvReverseOutput"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:background="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Reverse String Output"
        />

</LinearLayout>